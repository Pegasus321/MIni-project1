<%- include('header'); -%>

<hr style="
        width: 100%;
        margin-top:0;
        opacity: 1;
        margin-left: auto;
        margin-right: auto;
        background-color: black;
      ">
      <div class="container-fluid" id="product-section">
        <div class="row">
         <div class="col-md-6">
           <div class="col-md-6">
      <img height="500px"
       src="R.jfif"
       alt="Trial"
       class="image-responsive"
      />
     </div>
         </div>
         <div class="col-md-6">
      <div class="row">
       <div class="col-md-12">
        <h1><%=product2%></h1>
      </div>
     </div><!-- end row-->
     <div class="row">
     <div class="col-md-12">
      <span class="label label-primary">Vintage</span>
      <span class="monospaced">No. 1960140180</span>
     </div>
    </div><!-- end row -->
    <div class="row">
     <div class="col-md-12">
      <p class="description">
       Classic film camera. Uses 620 roll film.
       Has a 2&frac14; x 3&frac14; inch image size.
      </p>
     </div>
    </div><!-- end row -->
    <div class="row">
     <div class="col-md-3">
      <span class="sr-only">Four out of Five Stars</span>
      <i class="bi bi-star-fill"></i>
      <i class="bi bi-star-fill"></i>
      <i class="bi bi-star-fill"></i>
      <i class="bi bi-star-fill"></i>
      <i class="bi bi-star"></i>
     </div>
    </div><!-- end row -->
    <div class="row">
     <div class="col-md-12 bottom-rule">
      <h2 class="product-price"><%=price2%></h2>
     </div>
    </div><!-- end row -->

    <div class="row add-to-cart">
      <form  action="/product" method="post">
     <div class="col-md-5 product-qty">

      <span class="btn btn-default btn-lg btn-qty">
       <i onclick="add()"   class="bi bi-plus-lg"></i>
      </span>
      <input class="btn btn-default btn-lg btn-qty" name="addtocart" value="1" />
      <span class="btn btn-default btn-lg btn-qty">
        <i onclick="subtract()"  class="bi bi-dash-lg"></i>
      </span>

     </div>

     <div class="col-md-4">
      <button style="background-color:black;color:white;"   class="btn btn-lg btn-brand btn-full-width">
       Add to Cart
      </button>
     </div>
   </form>
    </div><!-- end row -->

    <div class="row">
     <div class="col-md-4 text-center">
      <span class="monospaced">In Stock</span>
     </div>
     <div class="col-md-4 col-md-offset-1 text-center">
      <a class="monospaced" href="#">Add to Shopping List</a>
     </div>
    </div><!-- end row -->
    <div class="row">
     <div class="col-md-12 bottom-rule top-10"></div>
    </div><!-- end row -->



    <!-- Nav tabs -->
    <ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active">
    <p href="#description"
    aria-controls="description"
    role="tab"
    data-toggle="tab"
    >Description</p>
    </li>
    </ul>
    <!-- Tab panes -->
    <div class="tab-content">
     <div role="tabpanel" class="tab-pane active" id="description">
      ...
     </div>
     <div role="tabpanel" class="tab-pane top-10" id="features">
      ...
     </div>
     <div role="tabpanel" class="tab-pane" id="notes">
      ...
     </div>
     <div role="tabpanel" class="tab-pane" id="reviews">
      ...
     </div>
    </div>
    <div role="tabpanel" class="tab-pane active" id="description">
     <p class="top-10">
      <%=info2%></p>

    </div>




        </div>
        </div><!-- end row -->
       </div><!-- end container -->


<%- include('footer'); -%>
